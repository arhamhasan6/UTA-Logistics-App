<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#09203f"
    tools:ignore="SpeakableTextPresentCheck">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="10sp"
        android:layout_marginTop="10sp"
        android:layout_marginEnd="10sp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/poppinsbold"
                android:text="Order Courier"
                android:textColor="@color/white"
                android:textSize="45dp" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:text="Recipient's Name"
                android:fontFamily="@font/poppinsmedium"
                android:textColor="#FFFFFF"
                android:textColorHint="#FFFFFF" />


            <EditText
                android:id="@+id/r_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15sp"
                android:layout_marginBottom="24dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                android:text="Enter Name"
                android:fontFamily="@font/poppinsmedium"
                android:textColor="#FFFFFF"
                android:textColorHint="#FFFFFF" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppinsmedium"
                android:text="Recipient's Email"
                android:textColor="#FFFFFF"
                android:textColorHint="#FFFFFF" />

            <EditText
                android:id="@+id/r_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15sp"
                android:ems="10"
                android:hint="Enter Email"
                android:fontFamily="@font/poppinsmedium"
                android:inputType="textEmailAddress"
                android:minHeight="48dp"
                android:textColor="#FFFFFF"
                android:textColorHint="#FFFFFF" />


            <TextView
                android:id="@+id/textView15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15sp"
                android:baselineAligned="false"
                android:fontFamily="@font/poppinsmedium"
                android:text="Recipient's CNIC"
                android:textColor="#FFFFFF"
                android:textColorHint="#FFFFFF" />

            <EditText
                android:id="@+id/r_cnic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15sp"
                android:ems="10"
                android:hint="Enter your CNIC No"
                android:fontFamily="@font/poppinsmedium"
                android:inputType="phone"
                android:minHeight="48dp"
                android:textColorHint="#FFFFFF" />


            <TextView
                android:id="@+id/textView14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15sp"
                android:text="Recipient's City"
                android:textColor="#FFFFFF"
                android:textColorHint="#FFFFFF" />


            <EditText
                android:id="@+id/r_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15sp"
                android:layout_marginBottom="28dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                android:fontFamily="@font/poppinsmedium"
                android:text="Enter the city"
                android:textColor="#FFFFFF"
                android:textColorHint="#FFFFFF"
                tools:layout_editor_absoluteY="735dp" />

            <TextView
                android:id="@+id/textView17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="28dp"
                android:text="Recipient's Address"
                android:fontFamily="@font/poppinsmedium"
                android:textColor="#FFFFFF" />

            <EditText
                android:id="@+id/r_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="28dp"
                android:ems="10"
                android:fontFamily="@font/poppinsmedium"
                android:hint="Enter Address"
                android:inputType="textPostalAddress"
                android:minHeight="48dp"
                android:textColor="#FFFFFF"
                android:textColorHint="#FFFFFF" />


            <TextView
                android:id="@+id/textView18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recipient's Contact No"
                android:fontFamily="@font/poppinsmedium"
                android:textColor="#FFFFFF"
                android:textColorHint="#FFFFFF" />

            <EditText
                android:id="@+id/r_contact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:ems="10"
                android:fontFamily="@font/poppinsmedium"
                android:hint="Enter your contact no"
                android:inputType="phone"
                android:minHeight="48dp"
                android:textColor="#FFFFFF"
                android:textColorHint="#FFFFFF" />

            <TextView
                android:id="@+id/textView19"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Package Weight"
                android:fontFamily="@font/poppinsmedium"
                android:textColor="#FFFFFF"
                android:textColorHint="#FFFFFF"
                tools:layout_editor_absoluteY="925dp" />

            <EditText
                android:id="@+id/weight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:ems="10"
                android:fontFamily="@font/poppinsmedium"
                android:hint="Enter weight in kgs"
                android:inputType="phone"
                android:minHeight="48dp"
                android:textColor="#FFFFFF"
                android:textColorHint="#FFFFFF" />

            <TextView
                android:id="@+id/textView20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Package Amount"
                android:fontFamily="@font/poppinsmedium"
                android:textColor="#FFFFFF"
                android:textColorHint="#FFFFFF"
                tools:layout_editor_absoluteY="925dp" />

            <EditText
                android:id="@+id/amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:ems="10"
                android:hint="Enter Package Amount"
                android:fontFamily="@font/poppinsmedium"
                android:inputType="phone"
                android:minHeight="48dp"
                android:textColor="#FFFFFF"
                android:textColorHint="#FFFFFF" />

            <TextView
                android:id="@+id/textView21"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Perishable items"
                android:fontFamily="@font/poppinsmedium"
                android:textColor="#FFFFFF"
                android:textColorHint="#FFFFFF"
                tools:layout_editor_absoluteY="925dp" />

            <EditText
                android:id="@+id/perishable_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15sp"
                android:layout_marginBottom="24dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                android:text="Enter Perishable items"
                android:fontFamily="@font/poppinsmedium"
                android:textColor="#FFFFFF"
                android:textColorHint="#FFFFFF" />

            <TextView
                android:id="@+id/textView22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="No of Goods"
                android:fontFamily="@font/poppinsmedium"
                android:textColor="#FFFFFF"
                android:textColorHint="#FFFFFF"
                tools:layout_editor_absoluteY="925dp" />

            <EditText
                android:id="@+id/goods"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15sp"
                android:layout_marginBottom="24dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                android:fontFamily="@font/poppinsmedium"
                android:text="Enter no of goods"
                android:textColor="#FFFFFF"
                android:textColorHint="#FFFFFF" />

            <Button
                android:id="@+id/submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15sp"
                android:layout_marginRight="10dp"
                android:backgroundTint="#00B0FF"
                android:text="SUBMIT"
                android:textColor="#ffff" />


        </LinearLayout>


    </RelativeLayout>

</ScrollView>